<Window x:Class="tutorial_mvc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:tutorial_mvc.ViewModels"
        xmlns:local="clr-namespace:tutorial_mvc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel x:Name="vm"/>
    </Window.DataContext>
    <Grid Background="Black" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
       <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Background="#33808080" VerticalAlignment="Top">
                <Button Content="{Binding BtPlayText}" Command="{Binding PlayCommand}" ></Button>
                <StackPanel Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" >
                <ProgressBar Margin="0,0,0,0" Minimum="0" Orientation="Vertical" Maximum="100" Value="{Binding Volume}" Height="100" Width="4"/>
                <Slider Opacity="0.5" Width="20" Margin="-11,4,0,0" Height="100" Value="{Binding Volume}" Minimum="0" Maximum="100" Orientation="Vertical"  />
                <TextBlock Text="{Binding Volume}" Opacity="{Binding Volume}" Foreground="White" />
            </StackPanel>
         </StackPanel>
        </StackPanel>
        <Canvas Grid.Row="0" Height="100" Background="#FF2B2B2B" >
            <Line
                X1="{Binding LineX}" Y1="0"    X2="{Binding LineX}" Y2="100"    Stroke="LightGreen"     StrokeThickness="2"/>
        </Canvas>
    </Grid>
</Window>
